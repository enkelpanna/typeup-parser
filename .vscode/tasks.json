{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "install",
			"args": ["install"]
		},
		{
			"taskName": "update",
			"args": ["update"]
		},
		{
			"taskName": "dev",
			"args": ["dev"],
			"isBackground": true,
			"problemMatcher": [ "$tsc", "$tslint5" ]
		},
		{
			"taskName": "build",
			"args": ["run", "build"],
			"isBuildCommand": true,
			"problemMatcher": [ "$tsc", "$tslint5" ]
		},
		{
			"taskName": "release",
			"showOutput": "always",
			"args": ["run", "release"]
		},
		{
			"taskName": "test",
			"args": ["run", "test"],
			"isTestCommand": true,
			"showOutput": "always",
			"problemMatcher": [ "$tsc", "$tslint5" ]
		}
	]
}
